@page
@using IuKRG.ELRD.Localization
@using IuKRG.ELRD.Web.Pages.Hospitals
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<ELRDResource> L
@{
    Layout = null;
}

<!-- subpage for creating new hospital -->
<abp-dynamic-form abp-model="Hospital" asp-page="/Hospitals/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewHospital"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
